  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path("https://res.cloudinary.com/dxgynqjm3/image/upload/v1561385972/bartender.jpg", height: 300, width: 300, crop: :fill) %>')">
    <div class="container">
      <h1 style="opacity: 0.8">THE</h1>
      <h1 style="opacity: 0.8">BARTENDER</h1>
    </div>
  </div>
  <br>

<div class="container">
  <div class="d-flex">
    <div>
      <p class="btn-index">Add you're cocktail:</p>
    </div>
    <%= simple_form_for [@cocktail] do |f| %>
      <div class="d-flex" style="height: 46px;">
      <%= f.text_field :name, placeholder:"Mojito", class: "new-cocktail" %>
      <%= f.input :photo, input_html: { style: 'display:none' }, label_html: { class: 'upload-photo'}, label: 'Upload a photo' %>
      <%= f.input :photo_cache, as: :hidden %>
      <%= f.submit class: 'button-new-cocktail' %>
      </div>

    <% end %>
  </div>

  <hr>
  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.url.nil? %>
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(' <%= cl_image_path("bartender", height: 300, width: 400, crop: :fill) %>')">
              <p style="color: white;"><%= cocktail.name %></p>
              <%= link_to '', cocktail_path(cocktail) %>
          </div>
      <% else %>
        <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(' <%= cl_image_path(cocktail.photo, height: 300, width: 400, crop: :fill) %>')">
              <p style="color: white;"><%= cocktail.name %></p>
              <%= link_to '', cocktail_path(cocktail) %>
        </div>
      <% end %>
    <% end %>
  </div>
</div>

