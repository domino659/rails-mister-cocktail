  <div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('<%= cl_image_path("https://res.cloudinary.com/dxgynqjm3/image/upload/v1561385972/bartender.jpg", height: 300, width: 300, crop: :fill) %>')">
    <div class="container">
      <h1 style="opacity: 0.8">THE</h1>
      <h1 style="opacity: 0.8">BARTENDER</h1>
    </div>
  </div>
